{
  "name": "todo-notes",
  "displayName": "Todo Notes",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "todo-notes.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "todo-notes.addTodo",
        "title": "Add Todo"
      },
      {
        "command": "todo-notes.completeTodo",
        "title": "Complete Todo"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "todo-notes.addTodo",
          "group": "1_modification"
        },
        {
          "when": "resourceLangId == markdown",
          "command": "todo-notes.completeTodo",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "todo-notes.addTodo",
        "key": "ctrl+k",
        "mac": "cmd+k",
        "when": "resourceLangId == markdown && editorTextFocus"
      },
      {
        "command": "todo-notes.completeTodo",
        "key": "ctrl+d",
        "mac": "cmd+d",
        "when": "resourceLangId == markdown && editorTextFocus"
      }
    ],
    "configuration": {
      "title": "todo-notes",
      "properties": {
        "todoNotes.saveNotesPath": {
          "type": "string",
          "description": "Path to directory where notes will be saved."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "sanitize-filename": "^1.6.3"
  }
}
